{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "overrides": [
    {
      "files": ["public/**/*.js"],
      "env": { "browser": true, "node": false },
      "rules": {
        "no-restricted-imports": ["error", {
          "paths": ["fs", "path", "http", "https", "child_process", "node-fetch"],
          "patterns": ["../config", "server/*", "../server/*"]
        }],
        "no-alert": "warn"
      }
    },
    {
      "files": ["scripts/**/*.js"],
      "env": { "node": true }
    },
    {
      "files": ["server/**/*.js", "server.js"],
      "env": { "node": true, "browser": false }
    }
  ]
}
